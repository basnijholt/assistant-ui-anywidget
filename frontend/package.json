{
  "name": "assistant-ui-widget",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "build:analyze": "vite build --analyze",
    "dev": "vite build --watch",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist node_modules/.vite coverage",
    "preinstall": "npx only-allow npm",
    "postinstall": "npm run type-check",
    "demo": "node scripts/serve-demo.cjs",
    "screenshot": "node scripts/screenshot.cjs",
    "screenshot:demo": "npm run demo & sleep 5 && npm run screenshot && kill $!"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "terser": "^5.43.1",
    "typescript": "^5.2.2",
    "vite": "^7.0.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@anywidget/react": "^0.2.0",
    "@assistant-ui/react": "^0.10.26",
    "@assistant-ui/react-markdown": "^0.10.6",
    "@types/react-syntax-highlighter": "^15.5.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "remark-gfm": "^4.0.1"
  }
}
